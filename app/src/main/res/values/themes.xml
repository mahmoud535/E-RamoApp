<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.E_RamoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/textColor</item>
        <item name="colorPrimaryVariant">@color/textColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here -->
    </style>

    //------------------- Custom ImageView ----------------- //
    <style name="CustomImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_marginBottom">@dimen/_162sdp</item>
    </style>

    //------------------- Custom View ----------------- //
    <style name="UnderlineViewStyle">
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDarkGrey</item>
    </style>

    //------------------- Custom TextView ----------------- //
    <style name="CustomTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>
</resources>